/* pages/test/test.wxss */

page {
  height: 100%;
}

.content {
  width: 100%;
  height: 100%;
  position: absolute;
	display: flex;
	flex-direction: column;
	align-items: flex-end;
	justify-content: flex-center;
}

.content .video-container {
  display: flex;
  width: 100%;
  height: 240rpx;
  overflow: hidden;
  flex-wrap: wrap;
}

.content .control-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: flex-center;
	bottom: 0;
}

.content .commonBtn {
  background-color: #fefffe;
  color: #5083aa;
  width: 240rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  box-shadow: 0px 4px 4px rgba(84, 163, 186, 0.15);
  font-weight: bold;
  border: 0;
}
