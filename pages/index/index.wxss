@import "../../common.wxss";

page {
  height: 100%;
}

.content {
  position: absolute;
  left: 80rpx;
  right: 80rpx;
  width: auto;
  height: 100%;
}

.content .logo-section {
  margin-bottom: 30rpx;
}

.content .logo-section .logo {
  margin-bottom: 20rpx;
}

.content .logo-section .h1 {
  margin-bottom: 10rpx;
}

.content .logo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx 20rpx 20rpx 20rpx;
  border-radius: 128rpx;
  box-shadow: 0px 0px 0px rgba(0, 0, 0, 0.3);
}

.content .logo-name {
  color: #2f597a;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.content .form-section {
  padding-top: 12rpx;
  width: 100%;
}

.content .form-section .h2 {
  padding: 12rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.content .form-section .rowWrapper {
  width: 100%;
}

.content .form-section .section {
  font-size: 28rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.content .valueInput {
  font-size: 28rpx;
  margin: 5rpx 30rpx;
  height: 80rpx;
  color: #5083aa;
  border-radius: 10rpx;
  border: 1px solid #98beca;
  background-color: rgba(255, 255, 255, 0.4);
}

.content .commonBtn {
  background-color: #fefffe;
  color: #5083aa;
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  box-shadow: 0px 4px 4px rgba(84, 163, 186, 0.15);
  font-weight: bold;
  border: 0;
}

.content .envBtn {
  /* background-color: white; */
  color: white;
  height: 80rpx;
  font-size: 28rpx;
  margin-top: 32rpx;
  line-height: 80rpx;
  border: 0;
  margin-bottom: -10rpx;
}

.content .footer {
  justify-content: flex-end;
  flex-grow: 1;
  font-size: 24rpx;
  padding: 12rpx;
  margin-bottom: 32rpx;
  color: #63c5e6;
}
