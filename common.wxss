.base-bg {
    width: 100%;
    height: 100%;
    position: absolute;
    background: linear-gradient(to bottom, #8FD3F5, #D3FDFF);
    color: #5083AA;
}

.h1{
  font-size: 32rpx;
}

.h2{
  font-size: 24rpx;
}

.on { display: block }

.off { display: none }

.flex-center-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.flex-center-row {
  display: flex;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  flex-direction: row;
  align-items: center;
  justify-content: flex-center;
}
